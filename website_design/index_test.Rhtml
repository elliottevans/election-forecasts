    <script>
        $(function(){
        $("tr").each(function(){
          var col_val = $(this).find("td:eq(2)").text();
          if ($.trim(col_val) == "Trump"){
            $(this).addClass('republican');  //the republican class colors the row green//
          } else if($.trim(col_val) == "Clinton") {
            $(this).addClass('democrat');
          }
        });
      });
    </script>


